<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:elevation="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:background="@drawable/custom_click_simple_baihat"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            android:text="1"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvthututrongdanhsach"/>
        <TextView
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="20sp"
            android:maxWidth="250dp"
            android:text="Tên ca khúc"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/tvthututrongdanhsach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtenbaihattrongdanhsach"/>
        <TextView
            android:fontFamily="serif"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tvtenbaihattrongdanhsach"
            android:textSize="10sp"
            android:maxWidth="250dp"
            android:text="Tên ca sĩ"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/tvthututrongdanhsach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtencasitrongdanhsach"/>
        <ImageView
            android:id="@+id/imgluotthichtrongdanhsach"
            android:layout_marginRight="5dp"
            android:src="@drawable/heart_null"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
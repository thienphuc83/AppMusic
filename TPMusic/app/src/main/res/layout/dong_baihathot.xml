<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/custom_click_simple_baihat"
    android:layout_height="wrap_content">

    
    <ImageView
        android:id="@+id/imgBaiHathot"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dp"
        android:layout_toRightOf="@id/imgBaiHathot"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvtenbaihathot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:text="Tên bài hát"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvtencasihot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvtenbaihathot"
            android:layout_margin="2dp"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Tên ca sĩ"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgLuotThichBaihat"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/heart_null" />

</RelativeLayout>
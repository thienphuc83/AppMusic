<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/framelayoutalbumtrongdanhsach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:id="@+id/imgalbumtrongdanhsach"/>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên thể loại"
                android:maxLines="1"
                android:ellipsize="end"
                android:gravity="left"
                android:lines="1"
                android:maxWidth="200dp"
                android:textColor="@color/colorAccent6"
                android:textStyle="bold"
                android:textSize="15sp"
                android:id="@+id/tvtenalbumtrongdanhsach"/>
            <TextView
                android:fontFamily="serif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Various Artists"
                android:gravity="left"
                android:textColor="@color/colorAccent6"
                android:textSize="10sp"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
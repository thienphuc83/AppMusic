<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="10dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="serif"
            android:text="1"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvthututrongdanhsachplay"/>
        <TextView
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:textSize="15sp"
            android:maxWidth="250dp"
            android:text="Tên ca khúc"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/tvthututrongdanhsachplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtenbaihattrongdanhsachplay"/>
        <TextView
            android:fontFamily="serif"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/tvtenbaihattrongdanhsachplay"
            android:textSize="10sp"
            android:maxWidth="250dp"
            android:text="Tên ca sĩ"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/tvthututrongdanhsachplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvtencasitrongdanhsachplay"/>
    </RelativeLayout>
</RelativeLayout>